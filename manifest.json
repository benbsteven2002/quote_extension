{
  "manifest_version": 3,
  "name": "Daily Inspiration Quote",
  "version": "1.0",
  "description": "Display an inspirational quote on the first new tab opened each day.",
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
